<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e3929093">

    <LinearLayout
        android:layout_width="663dp"
        android:layout_height="61dp"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/warnmessageMain"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="沒辦法完成?"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/warnmessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="如果您要離開這個測試，請點選【確定】，繼續測試【取消】!"
            android:textColor="#434343"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/splash_dialog_left"
            style="@android:style/Theme.Dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="確定"
            />

        <Button
            android:id="@+id/splash_dialog_right"
            style="@android:style/Theme.Dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/splash_dialog_left"
            android:layout_weight="1"
            android:text="取消"
          />

    </LinearLayout>
</LinearLayout>

